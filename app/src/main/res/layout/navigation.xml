<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:clickable="true">
    <TextView
        android:id="@+id/navigation_new_conversation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/navigation_new_chat"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/navigation_new_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/navigation_new_group"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/navigation_new_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/navigation_new_contact"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/navigation_contact_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/navigation_contacts"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/navigation_settings"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/navigation_settings"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>